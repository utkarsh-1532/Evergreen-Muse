rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for post images
    match /post_images/{userId}/{imageId} {
      // Anyone can read images
      allow read;
      
      // Only the authenticated user can write to their own path
      // - The user must be logged in.
      // - The `userId` in the path must match the UID of the person making the request.
      // - The uploaded file must be an image and less than 20MB.
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 20 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
